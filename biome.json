{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": false,
			"style": {
				"useNamingConvention": {
					"level": "error",
					"options": {
						"conventions": [
							{
								"selector": {
									"kind": "indexParameter",
									"modifiers": [
										"readonly"
									]
								},
								"formats": [
									"CONSTANT_CASE"
								]
							},
							{
								"selector": {
									"kind": "indexParameter"
								},
								"formats": [
									"camelCase"
								]
							}
						],
						"strictCase": false
					}
				}
			}
		}
	}
}
